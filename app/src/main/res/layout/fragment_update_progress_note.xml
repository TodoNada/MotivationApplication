<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLinearLayoutFragmentNotes">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutNameUpdateNote">

        <TextView
            android:id="@+id/textViewNameUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="nameOfNoteUpdate" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutDescriptionUpdateNote">

        <TextView
            android:id="@+id/textViewDescriptionUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DescriptionOfNoteUpdate" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutBeginDateUpdateNote">

        <TextView
            android:text="Begin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBeginUpdate"
            android:layout_weight="1" />

        <TextView
            android:text="BeginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewBeginDateUpdate"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutEndDateUpdateNote">

        <TextView
            android:text="End"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEndUpdate"
            android:layout_weight="1" />

        <TextView
            android:text="EndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewEndDateUpdate"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutDatePercentsUpdateNote">

        <TextView
            android:text="Time progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPercentsDateUpdate"
            android:layout_weight="1" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarTimeProgressUpdate"
            android:layout_weight="4"
            android:max="100"
            android:progress="40" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutImportancyUpdateNote">

        <TextView
            android:text="Importancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewImportancyUpdate"
            android:layout_weight="1" />

        <TextView
            android:text="ImportancyLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewImportancyLevelUpdate"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutTaskPercentageUpdateNote">

        <TextView
            android:text="Task progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTaskProgressUpdate"
            android:layout_weight="1" />

        <SeekBar
            android:id="@+id/seekBarProgressOfTaskUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:max="100"
            android:progress="62" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutRemindersUpdateNote">

        <TextView
            android:text="Reminders count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRemindersUpdate"
            android:layout_weight="1" />

        <TextView
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRemindersCountUpdate"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayoutProgressUpdateNote">

        <Button
            android:id="@+id/buttonUpdateProgressUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>